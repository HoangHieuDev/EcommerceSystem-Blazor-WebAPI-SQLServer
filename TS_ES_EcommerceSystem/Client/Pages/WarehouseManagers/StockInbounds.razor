@page "/StockInbound"


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" @onclick="()=> GetProducts()" data-bs-target="#addModal">
    Add product to warehouse
</button>
<h1>Production batch manager</h1>
<hr />
@if (productionBatches is null || stockInbounds is null)
{
    <p><em>Loading....!</em></p>
}
else
{
    <table class="table table-striped table-hover table-responsive table-responsive-sm w-100">
        <thead class="table-light">
            <tr>
                <th>Date inbound</th>
                <th>Product batch name</th>
                <th>Quantity per unit</th>
                <th>Quantity inbound</th>
                <th>Note</th>
                <th class=" text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in stockInbounds!)
            {
                <tr>
                    <td>@data.DateInbound</td>
                    <td>@data.ProductionBatch.ProductionBatchName</td>
                    <td>@data.ProductionBatch.Quantity</td>
                    <td style="max-width:200px;">@data.QuantityInbound</td>
                    <td>@data.Note</td>
                    <td class=" d-flex">
                        <a class="w-50 btn btn-success mx-2 my-auto" data-bs-toggle="modal" data-bs-target="#addModal" @onclick="() => GetStockInbound(data.InboundID)">
                            <span class="bi bi-pencil mx-1" aria-hidden="true"> Edit</span>
                        </a>
                        <a class="w-50 btn btn-danger mx-2 my-auto" @onclick="() => Delete(data.InboundID)">
                            <span class="bi bi-trash mx-1" aria-hidden="true"> Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">@((addButton == true ? "Add" : "Edit") + " product batch")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@stockInboundModel" OnSubmit="@Create" FormName="Inbound">
                        <div class="input-group input-group-sm mb-3">
                            <label class="input-group-text" for="Product">Product batch</label>
                            <select class="form-select" id="Product" @bind="@stockInboundModel.ProductionBatchID">
                                <option selected>
                                    Choose...
                                </option>
                                @foreach (var data in productionBatches!)
                                {
                                    <option value="@data.ProductionBatchID">@data.ProductionBatchName</option>
                                }
                            </select>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <label class="input-group-text">Quantity inbound</label>
                            <input @bind="@stockInboundModel.QuantityInbound" type="number" class="form-control">
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <label class="input-group-text">Note</label>
                            <textarea @bind="@stockInboundModel.Note" type="text" class="form-control"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="ClearData">Close</button>
                            <button class="btn btn-primary" data-bs-dismiss="modal" type="submit">@(addButton == true ? "Create new" : "Edit") product batch</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}